{
    "compilerOptions": {
      "target": "esnext",
      "lib": [
        "esnext"
      ],
      "moduleResolution": "node",
      "types": [
          "lua-types/jit",
          "typescript-to-lua",
          "./wc3-builder/builder",
          "./wc3-builder/common"
        ],
      "strict": true,
      "rootDir": "./src",
      "outDir": "./dst"
    },

    "include": [
      "src/**/*"
    ],

    "exclude": [],

    "tstl": {
      "luaTarget": "5.3",
    },

    "wc3-builder": {
      "lang": "ts",
      "tstl": "./node_modules/typescript-to-lua/dist/tstl.js",
      "traceback": true
    }
  }